<script>
async function loadVisitorCount() {
try {
const response = await fetch('/visitors');
const data = await response.json();
document.getElementById('visitor-count').innerText = data.visitorCount;
} catch (err) {
console.error('Failed to load visitor count:', err);
document.getElementById('visitor-count').innerText = 'Failed to load visitor count.';
}
}
loadVisitorCount();
function updateTime() {
const now = new Date();
const formattedTime = now.toLocaleTimeString('en-US', { hour12: false });
document.getElementById('currentTime').innerText = formattedTime;
}
updateTime();
setInterval(updateTime, 1000);
async function fetchUptime() {
try {
const response = await fetch('/api/uptime');
const data = await response.json();
document.getElementById('uptime').innerText = data;
} catch (error) {
console.error('Failed to fetch uptime:', error);
document.getElementById('uptime').innerText = 'Error fetching uptime';
}
}
fetchUptime();
setInterval(fetchUptime, 1000);
</script>
