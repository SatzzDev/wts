<div class="container-fluid">
<!-- Header Section -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
<h1 class="h3 mb-0 text-gray-800">
<i class="fas fa-earthquake text-danger"></i> Gempa Terkini
</h1>
</div>

<!-- Earthquake Data Section -->
<div class="row">
<div class="col-lg-12">
<div class="card shadow mb-4">
<!-- Card Body -->
<div class="card-body bg-light text-dark">
<h3 class="text-center font-weight-bold mb-4 text-danger">
<i class="fas fa-exclamation-circle"></i> Info Gempa Terkini
</h3>
<div class="row align-items-center">
<!-- Earthquake Details -->
<div class="col-md-8">
<p class="text-lg mb-2">
<i class="fas fa-map-marker-alt text-primary"></i> 
<strong>Wilayah:</strong> <%= gempa.Infogempa.gempa.Wilayah %>
</p>
<p class="text-lg mb-2">
<i class="fas fa-bolt text-warning"></i> 
<strong>Magnitudo:</strong> <%= gempa.Infogempa.gempa.Magnitude %>
</p>
<p class="text-lg mb-2">
<i class="fas fa-water text-info"></i> 
<strong>Kedalaman:</strong> <%= gempa.Infogempa.gempa.Kedalaman %>
</p>
<p class="text-lg mb-2">
<i class="fas fa-map text-success"></i> 
<strong>Koordinat:</strong> <%= gempa.Infogempa.gempa.Coordinates %>
</p>
<p class="text-lg mb-2">
<i class="fas fa-calendar-alt text-secondary"></i> 
<strong>Tanggal:</strong> <%= gempa.Infogempa.gempa.Tanggal %>
</p>
<p class="text-lg mb-2">
<i class="fas fa-clock text-dark"></i> 
<strong>Jam:</strong> <%= gempa.Infogempa.gempa.Jam %>
</p>
</div>
<!-- Shakemap Image -->
<div class="col-md-4 text-center">
<img 
src="https://data.bmkg.go.id/DataMKG/TEWS/<%= gempa.Infogempa.gempa.Shakemap %>" 
alt="Shakemap" 
class="img-fluid rounded-lg shadow-md" 
style="max-height: 300px;">
<p class="mt-2 text-muted">
<i class="fas fa-image text-gray-600"></i> Shakemap
</p>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
